#!/bin/sh

while getopts "u:p:" opt
do
   case "$opt" in
      u ) username="$OPTARG" ;;
      p ) password="$OPTARG" ;;
   esac
done

if [ -z $username ]
then
   echo -n "User for Diskstation:"
   read username

   if [ -z $username ]
   then
      username="$USER"
      echo "No username provided using: $username"
   fi
fi

if [ -z $password ] 
then
   echo -n "Password for Diskstation:"
   read -s password
   echo
fi

mount //Diskstation/Tobias /mnt/Diskstation/Tobias -o username=$username,pass=$password
mount //Diskstation/Music  /mnt/Diskstation/Music -o username=$username,pass=$password

echo "done"
